---
import Layout from "@layouts/Default.astro";
import HeroMain from "@components/hero/HeroMain.astro";
import SectionMuted from "@components/section/SectionMuted.astro";
import Container from "@components/section/Container.astro";
import SectionTitle from "@components/section/SectionTitle.astro";
import IconBlock from "@components/content/IconBlock.astro";
import Toolbar from "@components/content/doctors/grid/Toolbar.astro";
import Grid from "@components/content/doctors/grid/Grid.astro";
import SideStatsRight from "@components/content/features/SideStatsRight.astro";
import SideStatsLeft from "@components/content/features/SideStatsLeft.astro";
import Pricing from "@components/content/Pricing.astro";
import Cta from "@components/content/Cta.astro";
import Testimonials from "@components/content/Testimonials.astro";
---

<Layout title="Продажа медицинского оборудования и расходных материалов для клиник | MedicaEquip">
  <HeroMain />

  <SectionMuted>
    <Container>
      <SectionTitle
        title="С нами удобно работать"
        subtitle="Мы предлагаем комплексные решения, высокое качество оборудования и профессиональную поддержку на всех этапах сотрудничества."
        minititle="ПРЕИМУЩЕСТВА"
      />

      <div class="grid md:grid-cols-3 ltablet:grid-cols-4 lg:grid-cols-4 gap-x-6 gap-y-12" x-intersect="activeStep = ''">
        <!-- Item -->
        <div>
          <IconBlock
            title="Экономьте время и усилия"
            text="описание описание описание описание описание описание описание описание "
            icon="ph:timer-duotone"
            class="'text-primary-600'"
          />
        </div>
        <!-- Item -->
        <div>
          <IconBlock
            title="Профессионалы своего дела"
            text="описание описание описание описание описание описание описание описание "
            icon="ph:first-aid-duotone"
            class="'text-rose-500'"
          />
        </div>
        <!-- Item -->
        <div>
          <IconBlock
            title="Комплексный подход"
            text="описание описание описание описание описание описание описание описание "
            icon="ph:first-aid-kit-duotone"
            class="'text-primary-600'"
          />
        </div>
        <!-- Item -->
        <div>
          <IconBlock
            title="Иновации"
            text="описание описание описание описание описание описание описание описание "
            icon="ph:heartbeat-duotone"
            class="'text-rose-500'"
          />
        </div>
        <!-- Item -->
        <div>
          <IconBlock
            title="Видеоконсультации"
            text="описание описание описание описание описание описание описание описание "
            icon="ph:video-camera-duotone"
            class="'text-primary-600'"
          />
        </div>
        <!-- Item -->
        <div>
          <IconBlock
            title="Технические консультации"
            text="описание описание описание описание описание описание описание описание "
            icon="ph:phone-duotone"
            class="'text-primary-600'"
          />
        </div>
        <!-- Item -->
        <div>
          <IconBlock
            title="Надежность и пунктуальность"
            text="описание описание описание описание описание описание описание описание "
            icon="ph:calendar-duotone"
            class="'text-primary-600'"
          />
        </div>
        <!-- Item -->
        <div>
          <IconBlock
            title="Экспертность"
            text="описание описание описание описание описание описание описание описание "
            icon="ph:pill-duotone"
            class="'text-primary-600'"
          />
        </div>
      </div>
    </Container>
  </SectionMuted>

  <SectionMuted class="'border-b border-muted-200 dark:border-muted-800'">
    <Container>
      <SectionTitle
        title="Каталог поставляемой продукции"
        subtitle="описание описание описание описание описание описание описание описание описание описание"
        minititle="Оборудование"
        class="'mx-auto text-center'"
      />

      <div id="doctors" x-data="doctors()"  x-intersect="activeStep = 'spy-1'">
        <Toolbar />

        <!--Grid wrapper-->
        <div class="py-10">
          <div class="grid grid-cols-12 md:gap-12 pb-20">
            <!--Content-->
            <div class="col-span-12">
              <!--Subgrid-->
              <Grid />
            </div>
          </div>
        </div>
      </div>
    </Container>
  </SectionMuted>

  <SectionMuted class="'overflow-hidden'">
    <Container>
      <div class="py-10">
        <SideStatsRight />
        <SideStatsLeft />
      </div>
    </Container>
  </SectionMuted>

  <SectionMuted>
    <Container>
      <SectionTitle
        title="Pricing Options"
        subtitle="описание описание описание описание описание описание описание описание "
        minititle="Simple Pricing"
        class="'mx-auto text-center'"
      />
      <Pricing />
    </Container>
  </SectionMuted>

  <SectionMuted>
    <Container>
      <SectionTitle
        title="Вот, что говорят о нас клиенты"
        subtitle="описание описание описание описание описание описание описание описание "
        minititle="Отзывы"
        class="'mx-auto text-center'"
      />
      <Testimonials />
    </Container>
  </SectionMuted>

  <SectionMuted>
    <Container>
      <Cta />
    </Container>
  </SectionMuted>
</Layout>
