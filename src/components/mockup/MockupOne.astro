---
import Polka from '@components/base/Polka.astro'
import { Image } from "astro:assets";
import cab1 from "../../pic/img1.jpg";
import cab2 from "../../pic/img2.jpg";
import cab3 from "../../pic/img3.jpg";
---

<div class="relative flex flex-col gap-6 ptablet:w-[480px]">
  <!--Polka dots-->
  <div class="absolute -top-5 -left-5 z-0">
    <Polka />  
  </div>
  <div class="absolute -bottom-5 -right-5 z-0">
    <Polka />  
  </div>

  <!--Items-->
  <div class="flex items-end gap-6">
    <!--Item-->
    <div class="w-full ltablet:w-2/3 lg:w-2/3">
      <Image src={cab3} alt="cab3" class="relative z-10 w-full rounded-xl bg-white dark:bg-muted-800 border border-muted-200 dark:border-muted-700 shadow-xl shadow-muted-400/10 dark:shadow-muted-800/10" />
    </div>
    <!--Item-->
    <div class="w-full md:w-1/3 ptablet:hidden">
      <Image src={cab2} alt="cab2" class=" relative z-10 w-full rounded-xl bg-white dark:bg-muted-800 border border-muted-200 dark:border-muted-700 shadow-xl shadow-muted-400/10 dark:shadow-muted-800/10" />
    </div>
  </div>
  <!--Item-->
  <div class="w-full flex justify-end">
    <Image src={cab1} alt="cab1" class="relative z-10 w-full max-w-md rounded-xl bg-white dark:bg-muted-800 border border-muted-200 dark:border-muted-700 shadow-xl shadow-muted-400/10 dark:shadow-muted-800/10"/>
  </div>
</div>
